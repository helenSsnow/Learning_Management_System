--Показать все курсы
SELECT * FROM courses;

--Выборка по рейтингу
SELECT * 
FROM courses
WHERE rating >= 5.0;

--Выборка по автору
SELECT * 
FROM courses
WHERE create_author = 'Петров';

--Выборка по вхождению названия
select *
from courses
where title like '%Ja%';

-- Выборка названий курсов принадлежащих юзеру
SELECT title 
FROM courses JOIN
users ON courses.id = users.id_courses;

-- Найти лучший курс автора
SELECT title 
FROM courses JOIN
users ON courses.id = users.id_courses AND  courses.rating = (
         SELECT MAX(rating) 
         FROM courses
      );
